{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"strict": true,
		"resolveJsonModule": true,
		"removeComments": true,
		"newLine": "lf",
		"noUnusedLocals": true,
		"noFallthroughCasesInSwitch": true,
		"isolatedModules": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"lib": ["ESNext"]
	}
}